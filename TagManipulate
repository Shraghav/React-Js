import './App.css';

const App = () => {
  const name = null;
  const isNameShowing = false;
  return (
    <div className="App">
      <h1>Hello, {isNameShowing ? name : 'stranger'}</h1>
      {
        name ? (
          <>
            <h2>{name}</h2>
          </>
        ) :
          (
            <>
              <h1>No name</h1>
              <h2>Someone new</h2>
            </>
          )
      }
    </div>
  );
}

export default App;
